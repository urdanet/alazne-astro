---
import Image from 'astro/components/Image.astro';
import logo from '@assets/logo.png';
---

<nav class="bg-white border-b border-gray-200">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16 items-center">
      <!-- Navegación secundaria (Agenda y Reservas) -->
      <div class="flex items-center space-x-2 mr-2">
        <a
          href={`/alazne/home/`}
          class="text-gray-600 hover:text-indigo-600 px-3 py-2 rounded-md text-sm font-medium"
        >
          Reservas
        </a>
        <a
          href={`/alazne/calendar/`}
          class="text-gray-600 hover:text-indigo-600 px-3 py-2 rounded-md text-sm font-medium"
          >Agenda
        </a>
      </div>

      <!-- Botón logout (mobile first, visible siempre) -->
      <div class="flex items-center ml-auto">
        <button
          id="logoutBtn"
          class="primary px-4 py-2 rounded-md bg-primary-500 text-white font-medium focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2"
          style="min-width: 90px;"
        >
          Cerrar sesión
        </button>
      </div>

      <!-- Botón hamburguesa (solo visible en md<) -->
      <div class="flex items-center md:hidden ml-2">
        <button
          type="button"
          class="inline-flex items-center justify-center p-2 rounded-md text-gray-500 hover:text-gray-700 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-indigo-500"
          aria-expanded="false"
          aria-label="Abrir menú"
          onclick="toggleMobileMenu()"
        >
          <svg
            class="h-6 w-6"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>

      <!-- Menú para desktop (md≥) -->
      <div class="hidden md:flex md:space-x-8 md:items-center">
      </div>
    </div>
  </div>

  <!-- Menú móvil (inicialmente oculto) -->
  <div id="mobile-menu" class="hidden md:hidden border-t border-gray-200">
    <div class="flex flex-col px-2 pt-2 pb-3 space-y-1">
    </div>
  </div>
</nav>

<!-- Script para alternar el menú móvil y logout -->
<script is:inline>
  import { logout } from "@scripts/auth";
  function toggleMobileMenu() {
    const menu = document.getElementById("mobile-menu");
    if (menu) {
      menu.classList.toggle("hidden");
    }
  }
  // Logout handler
  document.addEventListener('DOMContentLoaded', () => {
    const btn = document.getElementById('logoutBtn');
    if (btn) {
      btn.addEventListener('click', () => {
        logout();
        window.location.href = '/alazne';
      });
    }
  });
</script>
