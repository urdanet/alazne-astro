---
import { getLangFromUrl } from '@i18n/utils';

interface Service {
  title: {
    es: string;
    eus: string;
  };
  description:  {
    es: string;
    eus: string;
  };
  icon: string;
}

interface Title {
  es: string;
  eus: string;
}

const title: Title = {
  es: "Nuestros Servicios",
  eus: "Gure zerbitzuak"
}

const services: Service[] = [
  {
    title: {
      es: "Corte de Cabello",
      eus: "Ilea korteak"
    },
    description: {
      es: "Cortes modernos y personalizados para hombres",
      eus: "Modernu ilea korteak mutileentzako"
    },
    icon: "scissors"
  },
  {
    title: {
      es: "Coloración",
      eus: "Koloreak"
    },
    description: {
      es: "Técnicas avanzadas de coloración y mechas",
      eus: "Koloreak avanztatuen teknikak eta mechaenak"
    },
    icon: "paint-brush"
  },
  {
    title: {
      es: "Peinados Especiales",
      eus: "Peinatua especialetan"
    },
    description: {
      es: "Peinados para ocasiones especiales y eventos",
      eus: "Peinatua especialetan eta garrantzitsuak"
    },
    icon: "crown"
  },
  {
    title: {
      es: "Tratamientos",
      eus: "Tratamenduak"
    },
    description: {
      es: "Tratamientos capilares profesionales para tu cabello",
      eus: "Capilar tratamenduak profesionalak tu zuriaren peluza"
    },
    icon: "leaf"
  }
];

const lang = getLangFromUrl(Astro.url);
---

<section class="bg-gray-50 py-20">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center mb-12">{title[lang]}</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {services.map((service) => (
        <div class="text-center p-6 bg-white rounded-lg shadow">
          <div class="text-primary-500 text-3xl mb-4">
            <i class="fas fa-{service.icon}"></i>
          </div>
          <h3 class="text-xl font-semibold mb-2">{service.title[lang]}</h3>
          <p class="text-gray-600">{service.description[lang]}</p>
        </div>
      ))}
    </div>
  </div>
</section>
