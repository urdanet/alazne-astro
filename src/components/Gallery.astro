---
import Image from 'astro/components/Image.astro';
import { getLangFromUrl } from '@i18n/utils';

interface Image {
  src: string;
  alt: {
    es: string;
    eus: string;
  };
}

const images: Image[] = [
  {
    src: '/images/gallery/1.jpg',
    alt: {
      es: 'Corte de cabello moderno',
      eus: 'Modernu ilea korteak'
    }
  },
  {
    src: '/images/gallery/2.jpg',
    alt: {
      es: 'Coloración profesional',
      eus: 'Profesioanla koloreak'
    }
  },
  {
    src: '/images/gallery/3.jpg',
    alt: {
      es: 'Peinado especial',
      eus: 'Especiala peinatua'
    } 
  },
  {
    src: '/images/gallery/4.jpg',
    alt: {
      es: 'Tratamiento capilar',
      eus: 'Capilar tratamenduak'
    }
  }
];

const lang = getLangFromUrl(Astro.url);
---

<section class="py-20">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center mb-12">Nuestra Galería</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
      {images.map((image) => (
        <div class="relative group">
          <Image 
            src={image.src} 
            alt={image.alt[lang]}
            width={100}
            height={256}
            class="object-cover rounded-lg transition-transform group-hover:scale-105"
          />
          <div class="absolute inset-0 bg-black bg-opacity-0 group-hover:bg-opacity-50 transition-opacity flex items-center justify-center">
            <h3 class="text-white text-lg font-semibold">{image.alt[lang]}</h3>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
