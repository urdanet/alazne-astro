---

export const prerender = false;

import Layout from '@layouts/Layout.astro';

const date  = Astro.params.date;

const hour = Astro.params.hour ? Astro.params.hour : '';

const hourValue = decodeURIComponent(hour);

const { dateValue } = Astro.props;
---

<Layout>
  <div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-6">Confirma tu reserva</h1>
    <p class="mb-4">
      Has seleccionado: <strong>{hourValue}</strong> a las <strong>{date}</strong>
    </p>

    <form action="/api/reservas" method="POST" class="space-y-4 max-w-md">
      <input type="hidden" name="search" value={date} />
      <input type="hidden" name="search" value={date} />

      <div>
        <label for="nombre" class="block font-medium">Nombre</label>
        <input id="nombre" name="nombre" type="text" required
               class="mt-1 block w-full border rounded p-2 focus:ring-2 focus:ring-red-500" />
      </div>

      <div>
        <label for="apellidos" class="block font-medium">Apellidos</label>
        <input id="apellidos" name="apellidos" type="text" required
               class="mt-1 block w-full border rounded p-2 focus:ring-2 focus:ring-red-500" />
      </div>

      <div>
        <label for="telefono" class="block font-medium">Tel√©fono</label>
        <input id="telefono" name="telefono" type="tel" required
               class="mt-1 block w-full border rounded p-2 focus:ring-2 focus:ring-red-500" />
      </div>

      <div>
        <label for="email" class="block font-medium">Email</label>
        <input id="email" name="email" type="email" required
               class="mt-1 block w-full border rounded p-2 focus:ring-2 focus:ring-red-500" />
      </div>

      <button type="submit"
              class="mt-4 bg-red-500 text-white px-4 py-2 rounded hover:bg-red-600 focus:outline-none focus:ring-2 focus:ring-red-500">
        Confirmar cita
      </button>
    </form>
  </div>
</Layout>